package mukemmelSayi;

public class Main {

	public static void main(String[] args) {
		//kendinden başka pozitif tüm tam bölenlerin toplamı kendisine eşit olan sayıya mükemmel sayı denir
		//6 --->1,2,3
		//26--->1,2,4,7,14
		
		int number = 26;
		int total = 0;
		boolean mukemmelMi = false;
		
		for(int i=1;i<number;i++) {
			if(number%i == 0) {
				total = total + i;
			}
			if(total == number) {
				System.out.println("sdf");
				mukemmelMi = true;
			}
		}
		
	
	
		if(mukemmelMi == true) {
			System.out.println("Mükemmel sayıdır");
		}else {
			System.out.println("Mükemmel sayı değildir");
		}
		

	}

}
